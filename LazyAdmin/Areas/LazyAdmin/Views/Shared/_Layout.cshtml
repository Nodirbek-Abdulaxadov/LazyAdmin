<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LazyAdmin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        .sidebar {
            background-color: #202529;
            color: #fff;
            height: 100%;
            position: fixed;
            width: 260px;
            z-index: 1;
            overflow-x: hidden;
            transition: 0.3s;
        }

        .main {
            height: 100vh;
            margin-left: 260px;
            display: block;
            width: 100%;
            background-color: #f1f1f1;
            overflow-x: hidden;
            transition: 0.3s;
        }

        .body {
            padding: 20px;
        }


        .toggle-button {
            height: 40px;
            width: 40px;
            border-radius: 6px;
            cursor: pointer;
            font-size: 1.5rem;
            border: 0.5px solid #d6d5d5;
            background-color: #202529;
            color: #fff;
        }

        .nav-item {
            color: #fff;
            margin: 5px 14px 5px 0px;
            width: 275px;
        }

        .nav-link-text {
            transition: 0.3s;
        }

        .form {
            width: 35%;
        }
    </style>

</head>
<body>
    <div class="d-flex justify-content-start">
        <aside class="sidebar" id="sidebar">
            <div class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark">
                <a href="/" style="height: 64px;" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                    <span class="mx-2" style="font-size: 2rem"><i class="bi bi-rss-fill"></i></span>
                    <span class="fs-4 nav-link-text">LazyAdmin</span>
                </a>
                <ul class="mt-4 nav nav-pills flex-column mb-auto">
                    <li class="nav-item">
                        <a href="#" class="nav-link active" aria-current="page">
                            <i class="bi bi-house-fill me-2"></i>
                            <span class="nav-link-text">Home</span>
                        </a>
                    </li>
                    
                  <li class="nav-item">
                     <a href="/lazyadmin/book/index" class="nav-link">
                         <i class="bi bi-diagram-2-fill"></i>
                         <span class="nav-link-text">Book</span>
                       </a>
                  </li>


                  <li class="nav-item">
                     <a href="/lazyadmin/test/index" class="nav-link">
                         <i class="bi bi-diagram-2-fill"></i>
                         <span class="nav-link-text">Test</span>
                       </a>
                  </li>


                </ul>
            </div>
        </aside>

        <div class="main" id="main">
            <header class="py-3 px-2 bg-dark text-white">
                <div class="d-flex flex-wrap align-items-center justify-content-between">
                    <button title="hello" class="toggle-button" onclick="toggleButton()">
                        <i class="bi bi-list"></i>
                    </button>
                    <div class="dropdown text-end">
                        <a href="#" class="d-block link-dark text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="https://github.com/mdo.png" alt="mdo" width="32" height="32" class="rounded-circle">
                        </a>
                        <ul class="dropdown-menu text-small" aria-labelledby="dropdownUser1">
                            <li><a class="dropdown-item" href="#">New project...</a></li>
                            <li><a class="dropdown-item" href="#">Settings</a></li>
                            <li><a class="dropdown-item" href="#">Profile</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">Sign out</a></li>
                        </ul>
                    </div>
                </div>
            </header>

            <main class="body p-5">
                @RenderBody()   
            </main>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
        var isCollapsed = false;

        function toggleButton() {
            var sidebar = document.getElementById("sidebar");
            var main = document.getElementById("main");
            if (isCollapsed) {
                var links = document.getElementsByClassName("nav-link-text")
                for (var i = 0; i < links.length; i++) {
                    links[i].style.display = "inline";
                }
                sidebar.style.width = "275px";
                main.style.marginLeft = "275px";
                isCollapsed = false;
            } else {
                sidebar.style.width = "70px";
                main.style.marginLeft = "70px";
                var links = document.getElementsByClassName("nav-link-text")
                for (var i = 0; i < links.length; i++) {
                    links[i].style.display = "none";
                }
                isCollapsed = true;
            }
        }
    </script>    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
